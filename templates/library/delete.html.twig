{% extends "base.html.twig" %}

{% block title %}Radera bok | Bibliotek{% endblock %}

{% block body %}
<h1>Radera bok</h1>

<form method="POST" action="{{ path('lib_delete', {'id': book.id}) }}">
    <label for="id">ID:</label><br>
    <input type="text" name="id" value="{{ book.id }}" readonly><br>
    
    <label for="title">Titel:</label><br>
    <input type="text" name="title" value="{{ book.title }}" readonly><br>

    <label for="isbn">ISBN-nummer:</label><br>
    <input type="number" name="isbn" value="{{ book.isbn }}" readonly><br>

    <label for="author">FÃ¶rfattare:</label><br>
    <input type="text" name="author" value="{{ book.author }}" readonly><br>

    {% if book.image %}
    <img src="{{ book.image }}" width="180px" alt="Bokens bild"><br>
    {% endif %}

    <input type="submit" value="Ta bort">
</form>

{% endblock %}
