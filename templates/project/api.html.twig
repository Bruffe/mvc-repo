{% extends "project/project-base.html.twig" %}

{% block title %}API | Home{% endblock %}

{% block body %}
<h1>Projektets API</h1>

<ul>
    <h4>API-länkar för projektet</h4>
    <form method="POST" action="">
        <li>
            <input class="blackjack-button" type="submit" name="show" value="Visa ställning"
            onClick="this.form.action='{{ path('proj_api_game') }}';">
        </li>

        <li>
            <input class="blackjack-button" type="submit" name="show" value="Spela vidare"
            onClick="this.form.action='{{ path('proj_api_draw') }}';">
        </li>

        <li>
            <input class="blackjack-button" type="submit" name="show" value="Stanna"
            onClick="this.form.action='{{ path('proj_api_stand') }}';">
        </li>

        <li>
            <input class="blackjack-button" type="submit" name="show" value="Starta om"
            onClick="this.form.action='{{ path('proj_api_restart') }}';">

            <label for="api-blackjack-name">Namn:</label>
            <input class="blackjack-select" type="text" name="api-blackjack-name" value="Guest" required>
            
            <label for="api-blackjack-hands">Antal händer (1-3):</label>
            <input class="blackjack-select" type="number" name="api-blackjack-hands" min="1" max="3" value="1" required>

            <label for="api-blackjack-hands">Bett per hand (0-30):</label>
            <input class="blackjack-select" type="number" name="api-blackjack-bets" min="0" max="30" value="20" required>
        </li>

        <li>
            <input class="blackjack-button" type="submit" name="show" value="Visa kortlek"
            onClick="this.form.action='{{ path('proj_api_cards') }}';">
        </li>
    </form>
</ul>

{% endblock %}
